@model PuntoVenta.Dominio.Entity.Caja

@{
    ViewData["Title"] = "Create";
}

<h1>Abrir Caja</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ValorInicial" class="control-label"></label>
                <input asp-for="ValorInicial" class="form-control" />
                <span asp-validation-for="ValorInicial" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a href="@Url.Action("Index")" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>
